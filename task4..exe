#include <iostream>
#include <string>
#include <cstdlib>
using namespace std;

int main() {
    string user_input;

    while (true) {
        cout << "User: ";
        getline(std::cin, user_input);

        if (user_input == "exit") {
           cout << "Exiting the chatbot.\n";
            break;
        }

        // Call Python script with user input
        string command = "python chatbot.py \"" + user_input + "\"";
        int status = system(command.c_str());

        if (status != 0) {
            std::cerr << "Error executing Python script.\n";
            return 1;
        }
    }

    return 0;
}

